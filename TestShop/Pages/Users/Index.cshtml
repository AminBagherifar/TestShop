@page
@model TestShop.Pages.Users.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>کاربران</h1>

<p>
    <a asp-page="Create">افزودن کاربر</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UsersModel[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsersModel[0].Family)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsersModel[0].Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.UsersModel)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Family)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-page="Edit" asp-route-id="@item.Id">ویرایش</a>
                </td>
            </tr>
        }
    </tbody>
</table>
